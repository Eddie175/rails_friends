<div class="card">
  <div class="card-header">
    <h1>Editing Friend</h1>
  </div>
  <div class="card-body">
    <%= render "form", friend: @friend %>
  </div>
</div>

<br>

<div>
  <%= link_to "Show friend", @friend, class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
